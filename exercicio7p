#include <stdio.h>
#include <stdlib.h>
int main (){
int a,i,soma=0;
double media;

for(i=1;i<=3;i++){
    printf("Digite um número: ");
scanf("%d",&a);
   soma+=a;
    
}
media=soma/3;
printf("A metade dos números digitados foram: \n");
for(i=1;i<=3;i++){
    printf("%d",a);
    
}

printf("A média dos números digitados: %f", media);
}
