#include <stdio.h>
#include <stdlib.h>
int main (){
int i;
double media,soma,metade,a;
for(i=1;i<=10;i++){
    printf("-->Digite um número: ");
scanf("%lf",&a);
   soma=soma+a;
   metade=a/2;
   printf("A metade do número é: %lf\n",metade);
}
media=soma/10;
printf("A soma dos números digitados foi: %lf\n",soma);
printf("A média dos números digitados: %lf", media);
}
